generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model radiologue {
  firstName   String
  lastName    String
  email       String  @unique
  id          String  @id @db.Uuid
  redio_liste Radio[]
 password    String
  @@index([email], map: "idx_email-radiologue")
}

model doctor {
  firstName   String
  lastName    String
  email       String  @unique
  id          String  @id @db.Uuid
  redio_liste Radio[]
  password    String

  @@index([email], map: "idx_email-doctor")
}

model patient {
  lastName       String
  age            Int
  dateOfBirth    DateTime
  medicalHistory String
  email          String   @unique
  id             String   @id @db.Uuid
  firstName      String
  redio_liste    Radio[]
  password       String

  @@index([email], map: "idx_email-patient")
}

model Radio {
  id            String     @id @default(uuid()) @db.Uuid
  patient_id    String     @db.Uuid
  radiologue_id String     @db.Uuid
  doctor_id     String     @db.Uuid
  date          DateTime   @default(now())
  radio_image   Bytes
  Title         String
  Comment       String?
  type          RadioType
  doctor        doctor     @relation(fields: [doctor_id], references: [id])
  patient       patient    @relation(fields: [patient_id], references: [id])
  radiologue    radiologue @relation(fields: [radiologue_id], references: [id])
}

enum RadioType {
  Bones
  Lung
  Other
}
